{
  "name": "movement-fullnode",
  "version": "1.0.0",
  "main": "dist/main.js",
  "types": "dist/types/main.d.ts",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "help": "npx ts-node main.ts --help",
    "clean": "rm -rf dist/ cdktf.out/ .gen/",
    "get": "cdktf get",
    "compile": "tsc --build",
    "watch": "tsc --build -w",
    
    "build:testnet": "pnpm run clean && pnpm run get && pnpm run compile && cdktf synth --target=indexer_testnet",
    "build:devnet": "pnpm run clean && pnpm run get && pnpm run compile && cdktf synth --target=indexer_devnet",
    "build:mainnet": "pnpm run clean && pnpm run get && pnpm run compile && cdktf synth --target=indexer_mainnet",
    
    "deploy:testnet": "pnpm run build:testnet && cdktf deploy --target=indexer_testnet",
    "deploy:devnet": "pnpm run build:devnet && cdktf deploy --target=indexer_devnet",
    "deploy:mainnet": "pnpm run build:mainnet && cdktf deploy --target=indexer_mainnet",
    
    "diff:testnet": "pnpm run build:testnet && cdktf diff --target=indexer_testnet",
    "diff:devnet": "pnpm run build:devnet && cdktf diff --target=indexer_devnet",
    "diff:mainnet": "pnpm run build:mainnet && cdktf diff --target=indexer_mainnet",
    
    "destroy:testnet": "cdktf destroy --target=indexer_testnet",
    "destroy:devnet": "cdktf destroy --target=indexer_devnet",
    "destroy:mainnet": "cdktf destroy --target=indexer_mainnet"
  },
  "dependencies": {
    "cdktf": "^0.21.0",
    "constructs": "^10.4.2",
    "@cdktf/provider-kubernetes": "^12.1.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/yargs": "^17.0.33",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}