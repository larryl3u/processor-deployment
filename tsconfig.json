{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    // Load json config files.s
    "resolveJsonModule": true,
  },
  "include": [
    "main.ts",
    "src/**/*.ts",
    ".gen/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cdktf.out"
  ],
  "ts-node": {
    "esm": false,
  }
}
